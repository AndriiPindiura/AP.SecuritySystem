    <section class="loginform cf">
        <form name="login" action="~/Account/CreateUser" method="post" accept-charset="utf-8">
            <fieldset>
                <legend>Register new user</legend>
                <ul>
                    <li>
                        <label for="login">Login</label>
                        <input name="Login" placeholder="username" required>
                    </li>

                    <li>
                        <label for="password">Password</label>
                        <input name="Hash" type="password" placeholder="password" id="password" required>
                    </li>
                    <li>
                        <label for="password">Comfirm</label>
                        <input type="password" placeholder="confirm" id="confirm_password" required>
                    </li>
                    <li>
