@{
// ViewBag.Title = "Home Page";
}
@model IQueryable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
<h1 class="text-light">Create new user<span class="mif-user-plus place-right"></span></h1>
<hr class="thin bg-grayLighter">
<div class="grid">
    <div class="row cells2">
        <div class="cell block-shadow-impact padding20 size-p40">
            <form method="post" action="@Url.Action("UserCreate", "Account")" id="createUserForm">

                <div class="input-control text full-size" data-role="input">
                    <label for="inputUsername">Please enter username</label>
                    <input type="text" name="Username" id="inputUsername" placeholder="username">
                    <!--<span class="label">You login</span>
                    <span class="informer">Please enter username</span>
                    <span class="placeholder">Input username</span>
                    <span class="icon mif-user"></span>-->

                </div>
                <br />
                <br />

                <div class="input-control text full-size" data-role="input">
                    <label for="inputEmail">Please enter email</label>
                    <input type="text" name="Email" id="inputEmail" placeholder="e-mail">
                    <!--<span class="label">You login</span>
                    <span class="informer">Please enter email</span>
                    <span class="placeholder">Input email</span>
                    <span class="icon mif-mail"></span>-->

                </div>
                <br />
                <br />

                <div class="input-control password full-size" data-role="input" id="divPassword">
                    <label for="inputPassword">Please enter password</label>
                    <input type="password" name="Password" id="inputPassword" placeholder="password">
                    <!--<span class="label">You password</span>
                    <span class="informer">Please enter you password</span>
                    <span class="placeholder">Input password</span>
                    <span class="icon mif-lock"></span>-->

                    <button class="button helper-button reveal"><span class="mif-looks"></span></button>

                </div>
                <br />
                <br />

                <div class="input-control password full-size" data-role="input" id="divConfirmPassword">
                    <label for="inputConfirmPassword">Please confirm password</label>
                    <input type="password" name="ConfirmPassword" id="inputConfirmPassword" placeholder="confirm">
                    <!--<span class="label">You password</span>
                    <span class="informer" id="informerConfirmPassword">Please enter you password</span>
                    <span class="placeholder">Re-type password</span>
                    <span class="icon mif-lock"></span>-->
                    <button class="button helper-button reveal"><span class="mif-looks"></span></button>

                </div>
                <hr class="thin bg-grayLighter">

                <div class="form-actions">
                    <button type="submit" class="button primary" id="buttonSubmit"><span class="mif-user-plus"></span> Create</button>
                    <button type="button" class="button link" id="cancel">Cancel</button>
                </div>
            </form>

        </div>
        <div class="padding20 cell size-p40 block-shadow-impact">
            <div class="grid">
                <div class="row cells2">
                    <div class="cell size-p30">
                        Roles available:
                    </div>

                    <div class="cell size-p70 block-shadow-impact listview "
                         id="available" style="height: 8.5em; overflow-y:scroll;" data-type="role">
                        @foreach (var role in Model)
                        {
                            <div class="list" draggable="true" id="@role.Id" data-type="role">
                                <span class="list-icon mif-key"></span>
                                <span class="list-title">@role.Name</span>
                            </div>

                        }


                    </div>
                </div>

                <div class="row cells2">
                    <div class="cell size-p30">
                        Roles assigned:
                    </div>

                    <div class="cell size-p70 block-shadow-impact listview "
                         id="assigned" style="height: 8.5em; overflow-y:scroll;" data-type="role">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


