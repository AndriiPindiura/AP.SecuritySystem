@model AP.SecuritySystem.Models.LoginViewModel

@{
    Layout = "~/Views/Layout/_LoginView.cshtml";
    ViewBag.Title = "Log In";
}



<section class="loginform cf">
    <form name="login" action="~/Account/Login" method="post" accept-charset="utf-8">
        <fieldset>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <legend>Authentication</legend>
            <ul>
                <li>
                    <label for="UserName">Login</label>
                    <input name="UserName" placeholder="username" required>
                </li>
                <li>
                    <label for="Password">Password</label>
                    <input name="Password" type="password" placeholder="password" required>
                </li>
                <li>


                    <input type="submit" value="Login">
                </li>
                <li>
                    <label for="RememberMe">Remember Me?</label>
                    <input type="checkbox" name="RememberMe" placeholder="Remember me?"/>


                </li>
            </ul>
        </fieldset>
    </form>
</section>





